
<h1>Edit Poem Form</h1>
<form action="<%= poem_url(params[:id]) %>" method="POST">
<input type="hidden" name="_method" value="PATCH">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">

<label>Title 
<input type="text" name="poem[title]" value="<%=@poem.title%>">
</label>

<label>Stanzas
  <input type="text" name="poem[stanzas]" value="<%=@poem.stanzas%>">
</label>

<label>True
<input type="radio" name="poem[complete]" value="true">
</label>

<label>False 
<input type="radio" name="poem[complete]" value="false">
</label>

  <input type="submit" value="Save Edited Poem">
</form>
<% if flash[:errors] %> <!-- displaying errors if they exist -->
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>